<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/fragment_navigation_scene">


    <!-- TODO move this to a fragment -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stepNavigation"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:background="?colorSecondary"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="?sizerMedium"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?colorBackgroundFloating" />

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="?spacerMedium"
        android:text="Journey Title"
        android:textAppearance="?textAppearanceHeadline6"
        android:textColor="?colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="@id/imgBack"
        app:layout_constraintStart_toEndOf="@id/imgBack"
        app:layout_constraintTop_toTopOf="@id/imgBack" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        style="@style/Widget.Backbase.ProgressBar.Linear.Inverted"
        android:layout_width="match_parent"
        android:layout_height="?sizerXSmall"
        android:layout_marginStart="?sizerMedium"
        android:layout_marginTop="?spacerMedium"
        android:layout_marginEnd="?sizerMedium"
        android:progress="50"
        app:layout_constraintTop_toBottomOf="@id/imgBack" />

    <TextView
        android:id="@+id/lblProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?spacerSmall"
        android:text="progress text"
        android:textAppearance="?textAppearanceHeadline5"
        android:textColor="?colorOnPrimary"
        app:layout_constraintStart_toStartOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="@id/progressBar" />

    <include
        android:id="@+id/topRoundedView"
        layout="@layout/top_rounded_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stepNavigation" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topRoundedView">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/appContent"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?colorBackgroundFloating"
            app:defaultNavHost="true" />

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.motion.widget.MotionLayout>
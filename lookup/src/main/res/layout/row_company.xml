<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?colorShimmer"
        android:layout_marginTop="?spacerMedium"
        app:cardCornerRadius="?radiusLarge"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="?spacerMedium"
            android:orientation="horizontal">

            <com.backbase.android.design.button.BackbaseRadioButton
                android:id="@+id/rbCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company name"
                    android:textAppearance="?textAppearanceBody2Medium" />

                <TextView
                    android:id="@+id/lblCompanyStructure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?spacerSmall"
                    android:text="Company structure"
                    android:textAppearance="?textAppearanceCaption" />

                <TextView
                    android:id="@+id/lblCompanyDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?spacerSmall"
                    android:text="Company description"
                    android:textAppearance="?textAppearanceBody2"
                    android:textColor="?colorTextSupport" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
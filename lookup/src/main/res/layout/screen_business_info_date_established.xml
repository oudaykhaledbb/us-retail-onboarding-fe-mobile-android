<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/journey_business_info">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?sizerMedium"
        android:text="@string/lookup_journey_label_date_established"
        android:textAppearance="?textAppearanceFormLabel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <com.backbase.android.design.calendar.CalendarButton
                android:id="@+id/calendarDateEstablished"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="?spacerXSmall"
                android:layout_weight="0.6"
                android:text="@string/lookup_journey_set_date"
                app:calendarDateFormat="dd MMM yyyy"
                app:calendarTitle="@string/lookup_journey_set_date" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtCalendarHelperText"
            android:layout_marginTop="?spacerXSmall"
            android:layout_marginStart="?spacerMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="?colorDanger" />

    </LinearLayout>

</merge>
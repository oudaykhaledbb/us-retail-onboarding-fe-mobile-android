<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/journey_business_info">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?spacerMedium"
        android:text="@string/lookup_journey_label_state_operating_in"
        android:textAppearance="?textAppearanceFormLabel" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputStateOperatingIn"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_marginTop="?sizerXSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="dropdown_menu">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/txtStateOperatingIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="@string/lookup_journey_label_sole_propriotership" />

    </com.google.android.material.textfield.TextInputLayout>
</merge>
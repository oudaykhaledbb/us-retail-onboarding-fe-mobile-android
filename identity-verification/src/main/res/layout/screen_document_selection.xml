<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSurface">

    <TextView
        android:id="@+id/lblHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="?spacerMedium"
        android:layout_marginTop="?spacerLarge"
        android:layout_marginEnd="?spacerMedium"
        android:layout_marginBottom="?spacerMedium"
        android:text="@string/identity_verification_document_selection_header"
        android:textAppearance="?textAppearanceSubtitle1"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/llCountry"
        layout="@layout/view_country_selection" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?spacerLarge"
        android:orientation="vertical"
        android:paddingStart="?spacerMedium"
        android:paddingEnd="?spacerMedium"
        app:layout_constraintTop_toBottomOf="@id/llCountry">

        <com.backbase.android.design.button.BackbaseButton
            android:id="@+id/btnPassport"
            style="?buttonStyleLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/identity_verification_document_selection_passport_label"
            android:visibility="gone"
            android:paddingStart="?spacerMedium"
            android:paddingEnd="?spacerMedium"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            app:icon="@drawable/ic_passport"
            app:iconGravity="start"
            app:iconPadding="?spacerSmall"
            app:iconTint="?colorPrimary"
            app:strokeColor="?colorPrimary"
            app:strokeWidth="1dp" />

        <com.backbase.android.design.button.BackbaseButton
            android:id="@+id/btnDriverLicense"
            style="?buttonStyleLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/identity_verification_document_selection_driving_license_label"
            android:visibility="gone"
            android:paddingStart="?spacerMedium"
            android:paddingEnd="?spacerMedium"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            app:icon="@drawable/ic_driving_license"
            app:iconGravity="start"
            app:iconPadding="?spacerSmall"
            app:iconTint="?colorPrimary"
            app:strokeColor="?colorPrimary"
            app:strokeWidth="1dp" />

        <com.backbase.android.design.button.BackbaseButton
            android:id="@+id/btnIdentificationCard"
            style="?buttonStyleLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/identity_verification_document_selection_idcard_label"
            android:visibility="gone"
            android:paddingStart="?spacerMedium"
            android:paddingEnd="?spacerMedium"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            app:icon="@drawable/ic_identity"
            app:iconGravity="start"
            app:iconPadding="?spacerSmall"
            app:iconTint="?colorPrimary"
            app:strokeColor="?colorPrimary"
            app:strokeWidth="1dp" />

        <com.backbase.android.design.button.BackbaseButton
            android:id="@+id/btnVisa"
            style="?buttonStyleLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/identity_verification_document_selection_visa_label"
            android:visibility="gone"
            android:paddingStart="?spacerMedium"
            android:paddingEnd="?spacerMedium"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            app:icon="@drawable/ic_identity_card"
            app:iconGravity="start"
            app:iconPadding="?spacerSmall"
            app:iconTint="?colorPrimary"
            app:strokeColor="?colorPrimary"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="?colorNeutral_00"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/llCountry">

        <ProgressBar
            style="@style/ColoredIndeterminateProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>